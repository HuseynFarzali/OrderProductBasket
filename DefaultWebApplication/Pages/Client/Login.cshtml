@page "/account/login"
@model DefaultWebApplication.Pages.Client.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h2 class="display-4">Login</h2>
    <form method="post" asp-page="login">
        <div asp-validation-summary="All" class="text-danger" style="font-size:14px"></div>

        <div class="form-group">
            <label asp-for="Input.Email" style="float:left"></label>
            <input asp-for="Input.Email" class="form-control" style="border-radius:12px" />
            @*<span asp-validation-for="Input.Email" class="text-danger"></span>*@
        </div>

        <div class="form-group">
            <label asp-for="Input.Password" style="float:left"></label>
            <input asp-for="Input.Password" class="form-control" style="border-radius:12px" />
            @*<span asp-validation-for="Input.Password" class="text-danger"></span>*@
        </div>

        <button type="submit" class="btn btn-primary">Login</button>
    </form>
</div>